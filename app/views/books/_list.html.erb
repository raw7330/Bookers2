<h1>New book</h1>

<% if book.errors.any? %>
 <%= book.errors.count %>件のerrorが発生しました
 <% book.errors.full_messages.each do |message| %>
 <%= message %>
 <% end %>
<% end %>

<%= form_with model: book, local:true do |f| %>
<%= f.label :title, 'Title' %>
  <%= f.text_field :title %>
<%= f.label :body, 'Opinion' %>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>

</div>