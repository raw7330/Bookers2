<%=flash[:notice] %>

<div class="container px-5 px-s-0">
 <div class="row">
  <div class="col-md-3">
  <%= render 'users/list', user: @user %>
  <%= render 'books/list', book: @book %>
  </div>

  <div class-"col-md-8 offset-md-1">
  <h4>Books</h4>
    <% @books.each do |book| %>
    <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>
        <tbody>
         <tr>
          <td><%= attachment_image_tag @user, :profile_image %></td>
          <td><%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
          </td>
          <td><%= book.body %></td>
         </tr>
        </tbody>
    </table>
    <% end %>
  </div>

 </div>
</div>
