<div class="profile-container">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image %>
  <h3 class="profile-name">name <%= @user.name %></h3>
  <p>introduction <%= @user.introduction %></p>
  <a href="/users/<%= current_user.id %>/edit">
  <i class="fas fa-user-cog"></i>
  </a>
  <!--<%= link_to "Edit", edit_user_path(current_user.id) %>-->
</div>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>

<h4>Books</h4>
  <% @books.each do |book| %>
  <table>
      <thead>
       <tr>
        <th><%= attachment_image_tag @user, :profile_image %></th>
        <%= link_to book_path(book.id) do %>
        <th>Title:<%= book.title %></th>
        <% end %>
        <th>Opinion:<%= book.body %></th>
       </tr>
      </thead>
  </table>
<% end %>
